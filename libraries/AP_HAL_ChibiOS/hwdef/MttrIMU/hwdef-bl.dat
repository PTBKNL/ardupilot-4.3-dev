# hw definition file for processing by chibios_hwdef.py
# mRo Nexus CAN flight controller bootloader
# M10084

# MCU class and specific type
MCU STM32H7xx STM32H743xx

# USB setup
USB_STRING_MANUFACTURER "mRo"

# crystal frequency
OSCILLATOR_HZ 0

# board ID for firmware load
APJ_BOARD_ID 1015

FLASH_SIZE_KB 2048

# bootloader is installed at zero offset
FLASH_RESERVE_START_KB 0

# reserve space for flash storage in last 2 sectors
FLASH_RESERVE_END_KB 256

# the location where the bootloader will put the firmware
# the H743 has 128k sectors
FLASH_BOOTLOADER_LOAD_KB 128

PB0 LED_BOOTLOADER OUTPUT

define HAL_LED_ON 0

# order of UARTs (and USB)
SERIAL_ORDER UART7

# debug uart, for firmware load
PE7 UART7_RX UART7
PE8 UART7_TX UART7

PA13 JTMS-SWDIO SWD
PA14 JTCK-SWCLK SWD

# the CAN bus
PB9 CAN1_TX CAN1
PB8 CAN1_RX CAN1
PE0 GPIO_CAN1_SILENT OUTPUT PUSHPULL LOW GPIO(72)

define HAL_USE_EMPTY_STORAGE 1
define HAL_STORAGE_SIZE 16384

# Add CS pins to ensure they are high in bootloader
PB12 CS_ADIS16470 CS
PE4 CS_FRAM CS

# This is the reset line for the adis16470. This will force a reset upon reboot.
PB1 nRST_ADIS OUTPUT LOW

# setup build for a peripheral firmware
env AP_PERIPH 1
define PERIPH_FW TRUE
define HAL_DISABLE_LOOP_DELAY

# reserve 256 bytes for comms between app and bootloader
RAM_RESERVE_START 256

define HAL_NO_LOGGING TRUE

define HAL_BUILD_AP_PERIPH
define HAL_NO_MONITOR_THREAD
define HAL_NO_ROMFS_SUPPORT
